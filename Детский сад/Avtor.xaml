<Page x:Class="Детский_сад.Avtor"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Детский_сад"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="1000"
      Title="Avtor">

    <Grid>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <StackPanel VerticalAlignment="Center">
                <StackPanel Orientation="Horizontal" Style="{StaticResource spAvtorReg}">
                    <TextBlock Text="Логин" Style="{StaticResource tbAvtor}"/>
                    <TextBox x:Name="tboxLogin" Style="{StaticResource tboxAvtor}"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Style="{StaticResource spAvtorReg}">
                    <TextBlock Text="Пароль" Style="{StaticResource tbAvtor}"/>
                    <PasswordBox x:Name="pbPassword" Style="{StaticResource pbAvtor}"/>
                </StackPanel>
            </StackPanel>
            <Button Name="btnAvtor" Content="Войти" Template="{StaticResource btnTemplate}" HorizontalAlignment="Left" Margin="20 0 0 0" Click="btnAvtor_Click"/>
        </StackPanel>
    </Grid>
</Page>